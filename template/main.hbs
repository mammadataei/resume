<div class="font-sans font-normal text-xs text-slate-800 leading-relaxed tracking-wide">
  <div class="flex pt-6">
    <div class="w-1/3 space-y-8 pr-6">

      {{#resume.basics}}
        <div class="space-y-1">
          {{>header title=label}}
          <h1 class="text-4xl font-bold text-stone-700">{{name}}</h1>
        </div>
      {{/resume.basics}}

      {{#resume.basics}}
        <div class="">
          {{>header title="Contact Info"}}

          <p>{{email}}</p>
          <p>{{location.address}} {{phone}}</p>

          <div class="pt-2 space-y-2">
            {{#each profiles}}
              <div class="">
                <h3 class="font-medium">{{network}}</h3>
                <a href={{url}} target="_blank" class="inline-block">{{replace url "https://" ""}}</a>
                <span class="i-lucide:external-link text-xs text-gray-600"></span>
              </div>
            {{/each}}
          </div>
        </div>
      {{/resume.basics}}

      <div class="">
        {{>header title="Skills"}}

        <ul class="list-disc pl-4">
          {{#each resume.skills}}
            <li class="">{{this}}</li>
          {{/each}}
        </ul>
      </div>

      <div class="">
        {{>header title="Tools and Technologies"}}

        <ul class="list-disc pl-4">
          {{#each resume.tools}}
            <li class="">{{this}}</li>
          {{/each}}
        </ul>
      </div>

      {{#resume.education}}
        <div class="">
          {{>header title="Education"}}

          <p class="font-medium">{{studyType}} of {{area}}</p>
          <p>{{institution}}</p>
        </div>
      {{/resume.education}}
    </div>

    <div class="w-2/3 pl-6 space-y-8">
      <div class="">
        {{> header title="Experience" }}

        <div class="space-y-6">
          {{#each resume.experiences}}
            <div class="space-y-0.5">
              <div class="flex justify-start items-baseline gap-1 font-medium text-sm">
                <h3 class="">{{name}}</h3>
                <span>/</span>
                <p class="">{{position}}</p>
              </div>

              <div class="flex space-x-1">
                <p>{{startDate}} - {{endDate}}</p>
              </div>

              <ul class="list-disc pl-4 pt-1 space-y-0.5">
                {{#each highlights}}
                  <li>{{.}}</li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="">
        {{> header title="Open source projects and contributions" }}

        <div class="space-y-4">
          {{#each resume.projects}}
            <div class="">
              <a href={{url}} target="_blank"
                class="inline-flex items-center justify-start space-x-1 font-medium text-sm">
                <span>{{name}}</span>
                <span class="i-lucide:external-link text-xs text-gray-600"></span>
              </a>

              <p class="pt-1">{{description}}</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>