<div class="font-sans font-normal text-stone-800">
    {{#resume.basics}}
    <div class="flex border-b pb-6 items-center">
      <div class="flex-grow text-sm">
        <p class="text-2xl text-left text-stone-800">{{name}}</p>
        <p class="pt-1 text-stone-600 text-xs">{{label}}</p>
      </div>
      <div
        class="font-light text-xxs text-right text-stone-500 leading-relaxed tracking-wide"
      >
        <p>{{email}}</p>
        <p>{{phone}}</p>
      </div>
    </div>
    {{/resume.basics}}

    <div class="flex pt-6 gap-8">
      <div class="w-3/4 flex flex-col justify-start gap-8">
        <div class="space-y-4">
          <h2
            class="text-xxs font-normal text-left uppercase text-stone-500 tracking-wide"
          >
            Experience
          </h2>

          <div class="space-y-8">
            {{#each resume.work}}
            <div class="space-y-2">
              <div class="flex justify-start items-baseline gap-2">
                <h3 class="text-base text-left font-medium text-stone-800">
                  {{name}}
                </h3>

                <p class="text-sm font-light text-left text-stone-500">
                  {{position}}
                </p>
              </div>

              <div
                class="flex justify-start items-center gap-x-2 font-light tracking-wide text-stone-500 text-xxs leading-loose"
              >
                <p>{{location}}</p>
                <span>|</span>
                <p>January 2018 — Present</p>
              </div>

              <ul
                class="pl-4 space-y-1.5 font-light text-xxs text-stone-600 list-disc leading-normal tracking-wide"
              >
                {{#each highlights}}
                <li class="pl-1">{{.}}</li>
                {{/each}}
              </ul>
            </div>
            {{/each}}
          </div>
        </div>
      </div>

      <div class="w-1/4 space-y-8">
        <div class="space-y-4">
          <h2
            class="text-xxs font-normal text-left uppercase text-stone-500 tracking-wide"
          >
            Skills
          </h2>

          <ul
            class="pl-4 font-light text-xxs list-disc text-stone-600 leading-relaxed"
          >
            {{#each resume.skills}}
            <li class="pl-1">{{name}}</li>
            {{/each}}
          </ul>
        </div>

        <div
          class="flex flex-col justify-start items-center flex-grow-0 flex-shrink-0 relative gap-0.5"
        >
          <p
            class="self-stretch flex-grow-0 flex-shrink-0 w-[124px] text-[8px] font-medium text-left text-[#242424]"
          >
            Tools
          </p>
          <p
            class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
          >
            <span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Figma</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Protopie</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Sketch</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Adobe Photoshop</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Adobe Illustrator</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Adobe After Effects</span
            ><br /><span
              class="flex-grow-0 flex-shrink-0 w-[124px] text-[7px] text-left text-[#4d4d4d]"
              >• Procreate</span
            >
          </p>
        </div>
      </div>
    </div>
</div>