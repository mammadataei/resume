<div class="font-sans font-normal text-xs text-slate-800 leading-relaxed tracking-wide">
  <div class="flex pt-6">
    <div class="w-1/3 space-y-8 pr-6">

      {{#resume.basics}}
        <div class="space-y-1">
          {{>header title=label}}
          <h1 class="text-4xl font-bold text-stone-700">{{name}}</h1>
        </div>
      {{/resume.basics}}

      {{#resume.basics}}
        <div class="">
          {{>header title="Contact Info"}}

          <p>{{email}}</p>
          <p>{{phone}}</p>
          <p>{{location.address}}</p>

          <div class="pt-3 space-y-2">
            {{#each profiles}}
              <div class="">
                <h3 class="font-medium">{{network}}</h3>
                <a href={{url}} target="_blank" class="inline-block">{{replace url "https://" ""}}</a>
                <span class="i-lucide:external-link text-xs text-gray-600"></span>
              </div>
            {{/each}}
          </div>
        </div>
      {{/resume.basics}}

    </div>

    <div class="w-2/3 pl-6 space-y-8 text-sm leading-relaxed tracking-wide text-slate-700">
      <p>{{today}}</p>

      <div class="">
        <p>{{resume.recipient.full_name}}</p>
        <p>{{resume.recipient.title}}</p>
        <p>{{resume.company}}</p>
      </div>

      <div class="space-y-2">
        <p>Dear {{resume.recipient.name}},</p>
        <div class="space-y-2">
          {{#each resume.content}}
            <p>{{this}}</p>
          {{/each}}
        </div>
      </div>

      <div>
        <p>Regards,</p>
        <p>{{resume.basics.name}}</p>
        <p>{{resume.basics.label}}</p>
      </div>
    </div>
  </div>
</div>